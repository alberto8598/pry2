pipeline {
    agent any
     tools {
        gradle '7.5.1'
        }

    stages {
        stage('Clone Repository') {
               steps {
                      git branch: 'develop', credentialsId: '112f9878-7c13-4fe6-a745-f95f0c4f47ed', url: 'https://github.com/alberto8598/pry2.git'
                      }
             }
               stage('JAVA Version') {
                     steps {
                           withGradle {
                                    bat 'java --version'
                                 }
                           }
                   }
        stage('Ejecutar pruebas unitarias') {
            steps {
                  withGradle {
                         bat 'gradle test'
                             }
            }
        }

        stage('build Gradle Project') {
                steps {
                      withGradle {
                               bat 'gradle clean build'
                            }
                      }
              }

       stage('Quality Scan Project') {
           environment {
               scannerHome = tool 'SonarQubeScanner'
           }
           steps {
               withSonarQubeEnv('SonarQubeServer') {
                   bat "gradle sonarqube -Dsonar.login=admin -Dsonar.password=Pesunita1_ -Dsonar.projectKey=pry2"
               }
           }
       }
        stage('Construir imagen Docker') {
            steps {
                bat 'docker build -t myapp .'
            }
        }
        stage('Subir imagen Docker') {
           steps {
              withDockerRegistry([credentialsId: '7dd3df4f-f53c-4ad2-bf16-d5352962ae9c', url: 'https://index.docker.io/v1/']) {
                           bat 'docker push curribifine/credibanco'
                 }
            }
        }
    }
}